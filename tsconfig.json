{
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
